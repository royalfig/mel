{{!< default}}
<div class="mel-container">
    <div class="mel-container__inner">
        <div class="mel-hero">
            <div class="mel-hero__left">
                <h1 class="mel-hero__title">{{@site.title}}</h1>
                <p class="mel-hero__description">I code, create, and teach.</p>
                <p class="mel-hero__description">
                   It&apos;s usually with some Cincinnati chili and craft beer&nbsp;ğŸ», beside a little canine called Mel&nbsp;ğŸ©, and in an old can factory&nbsp;ğŸ¥«.
                </p>
                 <p class="mel-hero__description">
                   Sign up and join us on our coding adventures&nbsp;ğŸ˜
                </p>
                {{> "inline-signup"}}
            </div>
            <div class="mel-hero__right">
                <img class="mel-hero__img" 
                srcset="{{img_url @site.cover_image size="m"}}, {{img_url feature_image size="l"}} 2x"
                src="{{img_url @site.cover_image size="m"}}" alt="{{@site.title}}">
            </div>
        </div>
    </div>
</div>

<header class="mel-header">
    <h2>What&apos;s On Special</h2>
    <div class="mel-header__line"></div>
</header>

{{#get "posts" filter="featured:true" as |featured|}}
    {{#if featured}}
        <div class="mel-container mel-cards">
            <div class="mel-card__container">
                {{#foreach featured}}
                    {{> "card"}}
                {{/foreach}}
            </div>
        </div>
    {{/if}}
{{/get}}

<header class="mel-header">
    <h2>What&apos;s Fresh</h2>
    <div class="mel-header__line"></div>
</header>

<div class="mel-container">
    <div class="mel-container__inner">
        {{#foreach posts}}
            {{^if featured}}
                {{> "list"}}
            {{/if}}
        {{/foreach}}
        {{pagination}}
    </div>
</div>
